<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:id="@+id/LinearLayout">


    <ImageButton
        android:id="@+id/imageRedButton"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:background="@android:color/transparent"
        android:onClick="OnClickRed"
        android:scaleType="fitCenter"
        android:src="@drawable/redcircle" />

    <ImageButton
        android:id="@+id/imageYellowButton"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:background="@android:color/transparent"
        android:onClick="OnClickYellow"
        android:scaleType="fitCenter"
        android:src="@drawable/yellowcircle" />

    <ImageButton
        android:id="@+id/imagGreenButton"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:background="@android:color/transparent"
        android:onClick="OnClickGreen"
        android:scaleType="fitCenter"
        android:src="@drawable/greencircle" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20pt"
        android:text="Color"
        android:textAlignment="center"
        android:textSize="48sp" />


</LinearLayout>